FROM 940327799086.dkr.ecr.us-west-2.amazonaws.com/rpd-ccss-base-images:dotnet-3.1-sdk
ARG SERVICE_PATH

COPY . /build/
WORKDIR /build

RUN dotnet publish $SERVICE_PATH/src/VSS.Productivity3D.Filter.WebApi/VSS.Productivity3D.Filter.WebApi.csproj --configuration Release --output /build/artifacts --framework netcoreapp3.1 --runtime linux-x64 -nowarn:NU1701 -nowarn:CS1591

RUN dotnet publish $SERVICE_PATH/src/VSS.Productivity3D.Filter.Cleanup/VSS.Productivity3D.Filter.Cleanup.csproj --configuration Release --output /build/artifacts --framework netcoreapp3.1 --runtime linux-x64 -nowarn:NU1701 -nowarn:CS1591
