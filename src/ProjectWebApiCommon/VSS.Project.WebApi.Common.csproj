<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <AssemblyName>VSS.MasterData.Project.WebAPI.Common</AssemblyName>
    <PackageId>ProjectWebApiCommon</PackageId>
    <GenerateAssemblyConfigurationAttribute>false</GenerateAssemblyConfigurationAttribute>
    <GenerateAssemblyCompanyAttribute>false</GenerateAssemblyCompanyAttribute>
    <GenerateAssemblyProductAttribute>false</GenerateAssemblyProductAttribute>
    <RootNamespace>VSS.MasterData.Project.WebAPI.Common</RootNamespace>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="AutoMapper" Version="6.1.1" />
    <PackageReference Include="VSS.FlowJSHandler.netcore" Version="2.1.*" />
    <PackageReference Include="VSS.KafkaConsumer.netcore" Version="3.7.16" />
    <PackageReference Include="VSS.Log4NetExtensions.netcore" Version="2.3.3" />
    <PackageReference Include="VSS.MasterData.Proxies.netcore" Version="2.44.0" />
    <PackageReference Include="VSS.MasterData.Repositories.netcore" Version="2.11.18" />
    <PackageReference Include="VSS.TCCFileAccess.netcore" Version="2.12.2" />
    <PackageReference Include="VSS.MasterData.Models.netcore" Version="2.33.0" />
    <!--Common does not directly depend on NameResolution however it wont build without it due to package downgrade issues-->
    <PackageReference Include="System.Net.NameResolution" Version="4.3.0" />
  </ItemGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Debug|AnyCPU'">
    <DebugType>full</DebugType>
    <DebugSymbols>True</DebugSymbols>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
    <NoWarn>1701;1702;1705;NU1605</NoWarn>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <NoWarn>1701;1702;1705;NU1605</NoWarn>
    <TreatWarningsAsErrors>false</TreatWarningsAsErrors>
    <WarningsAsErrors />
  </PropertyGroup>

</Project>
