ARG FROM_IMAGE
FROM ${FROM_IMAGE}

ARG SERVICE_PATH
WORKDIR /build/${SERVICE_PATH}

RUN find . -name "*Tests.csproj" | xargs -I@ -t dotnet test /p:CollectCoverage=true /p:CoverletOutputFormat=cobertura /p:CoverletOutput="/build/${SERVICE_PATH}/UnitTestResults/" --logger trx --results-directory UnitTestResults -nowarn:NU1701 @
