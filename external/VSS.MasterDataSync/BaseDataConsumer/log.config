<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<targets>
		<target name="WriteToFile" xsi:type="File" fileName="C:/Logs/msg_md_basedata_svc/BaseDataConsumer.log" layout="${longdate} [${threadid}] ${level:uppercase=true} ${logger} ${message}${exception:format=ToString}" archiveFileName="C:/Logs/BaseDataConsumer/BaseDataConsumer.{#}.log" archiveNumbering="Rolling" archiveAboveSize="524288000" maxArchiveFiles="5" />
		<target name="WriteToConsole" type="Console" layout="${longdate} [${threadid}] ${level:uppercase=true} ${logger} ${message}${exception:format=ToString}"/>
	</targets>
	<rules>
		<logger name="*" minLevel="Debug" appendTo="WriteToFile,WriteToConsole"/>
	</rules>
</nlog>