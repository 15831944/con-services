        <!--<conversionPattern value="%utcdate [%2thread] %-5level %exception - %message%newline" />-->
        <conversionPattern value="%utcdate %-5level %exception - %message%newline" />
      </layout>
    </appender>
    <root>
      <!-- 1.OFF - nothing gets logged
          2.FATAL 
          3.ERROR
          4.WARN
          5.INFO
          6.DEBUG
          7.ALL - everything gets logged -->
      <level value="ALL" />
      <appender-ref ref="RollingLogFileAppender" />
    </root>
  </log4net>
